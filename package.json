{
    "name": "rcs",
    "displayName": "RCS Integration",
    "description": "SCM provider for RCS",
    "version": "0.0.2",
    "publisher": "iapark",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "rcs.openResouce",
                "title": "Open a resource"
            },
            {
                "command": "rcs.lock",
                "title": "Lock",
                "when": "scmProvider == rcs"

            },
            {
                "command": "rcs.checkin",
                "title": "Checkin",
                "when": "scmProvider == rcs && scmResourceGroup == loc"
            },
            {
                "command": "rcs.refresh",
                "title": "Refresh",
                "when": "scmProvider == rcs"
            },
            {
                "command": "rcs.stage",
                "title": "Stage",
                "when": "scmProvider == rcs"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "rcs.refresh",
                    "group": "inline",
                    "when": "scmProvider == rcs"
                },
                {
                    "command": "rcs.checkin",
                    "title": "Checkin",
                    "when": "scmProvider == rcs"
                }
            ],
            "explorer/context": [{
                "command": "rcs.lock",
                "group": "navigation",
                "when": "scmProvider == rcs"
            }],

            "scm/resourceGroup/context": [
                {
                    "command": "rcs.stage",
                    "group": "inline",
                    "when": "scmProvider == rcs && scmResourceGroup == loc"

                }
            ], 

            "scm/resourceState/context": [
                {
                    "command": "rcs.stage",
                    "group": "inline",
                    "when": "scmProvider == rcs && scmResourceGroup == loc"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "@types/username": "^1.0.28",
        "username": "^3.0.0"
    }
}
